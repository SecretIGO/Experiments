<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.views.admin.AdminActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome Admin!"
            android:textSize="24sp"
            android:gravity="center"
            android:padding="10dp"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/red_400"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cinema Settings"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/red_400"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add or customize the theatre(s)"
            android:layout_gravity="center"/>

        <GridLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">

            <Button
                android:id="@+id/btn_addCinema"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/red_400"
                android:text="Add Cinema"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/btn_editCinema"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/red_400"
                android:text="Edit Cinema"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/btn_editTheatre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/red_400"
                android:text="Edit Theatre"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/btn_deleteCinema"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/red_800"
                android:text="Delete Cinema"
                android:layout_margin="5dp"/>
        </GridLayout>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/red_400"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie Settings"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/red_400"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add or customize the theatre(s)"
            android:layout_gravity="center"/>

        <GridLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">

            <Button
                android:id="@+id/btn_addMovie"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/red_400"
                android:text="Add Movie"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/btn_editMovie"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/red_400"
                android:text="Edit Movie"
                android:layout_margin="5dp"/>
            <Button
                android:id="@+id/btn_deleteMovie"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/red_800"
                android:text="Delete Movie"
                android:layout_margin="5dp"/>
        </GridLayout>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/red_400"
            />

    </LinearLayout>

</ScrollView>